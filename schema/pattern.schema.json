{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Pattern front matter schema",
  "type": "object",
  "required": [
    "id",
    "title",
    "type",
    "status",
    "confidence",
    "revision",
    "languages",
    "frameworks",
    "domain",
    "introduced",
    "last_verified",
    "review_by",
    "sanitized"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    },
    "title": {
      "type": "string",
      "minLength": 5
    },
    "type": {
      "type": "string",
      "enum": [
        "troubleshooting",
        "implementation",
        "architecture",
        "anti-pattern"
      ]
    },
    "status": {
      "type": "string",
      "enum": [
        "draft",
        "validated",
        "deprecated"
      ]
    },
    "confidence": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high"
      ]
    },
    "revision": {
      "type": "integer",
      "minimum": 1
    },
    "languages": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "frameworks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "name",
          "version"
        ],
        "properties": {
          "ecosystem": {
            "type": "string",
            "enum": [
              "npm",
              "rubygems",
              "pypi",
              "go",
              "cargo",
              "other"
            ]
          },
          "name": {
            "type": "string"
          },
          "version": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "version"
        ],
        "properties": {
          "ecosystem": {
            "type": "string",
            "enum": [
              "npm",
              "rubygems",
              "pypi",
              "go",
              "cargo",
              "other"
            ]
          },
          "name": {
            "type": "string"
          },
          "version": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "runtime": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "domain": {
      "type": "string",
      "enum": [
        "state-management",
        "caching",
        "indexing",
        "authentication",
        "authorization",
        "data-fetching",
        "forms",
        "routing",
        "error-handling",
        "testing",
        "performance",
        "deployment",
        "database",
        "api-design",
        "concurrency",
        "observability"
      ]
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "introduced": {
      "type": "string",
      "format": "date"
    },
    "last_verified": {
      "type": "string",
      "format": "date"
    },
    "review_by": {
      "type": "string",
      "format": "date"
    },
    "deprecated_date": {
      "type": [
        "string",
        "null"
      ],
      "format": "date"
    },
    "superseded_by": {
      "type": [
        "string",
        "null"
      ]
    },
    "related": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "maintainers": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "sanitized": {
      "type": "boolean"
    },
    "migration_note": {
      "type": [
        "string",
        "null"
      ]
    },
    "notes": {
      "type": [
        "string",
        "null"
      ]
    }
  },
  "additionalProperties": true
}
